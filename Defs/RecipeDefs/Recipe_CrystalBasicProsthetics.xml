  <RecipeDef ParentName="SurgeryCrystalBasic">
		<defName>InstallCSteelArm</defName>
		<label>install steel arm</label>
		<description>Installs steel arm.</description>
		<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
		<jobString>Installing steel arm.</jobString>
		<workAmount>350</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>SteelArm</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<thingDefs>
				<li>SteelArm</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>CrystalHumanLeftShoulder</li>
			<li>CrystalHumanRightShoulder</li>
		</appliedOnFixedBodyParts>
		<addsHediff>SteelArm</addsHediff>
	</RecipeDef>
  
